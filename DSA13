#include <stdio.h>

int main() {
int n, i, x, low, high, mid, flag = 0;
printf("Enter number of elements: ");
scanf("%d", &n);
int arr[n];
printf("Enter %d sorted elements: ", n);
for (i = 0; i < n; i++) {
scanf("%d", &arr[i]);
}
printf("Enter value to search: ");
scanf("%d", &x);
low = 0;
high = n - 1;
while (low <= high) {
mid = (low + high) / 2;
if (arr[mid] == x) {
printf("Element %d found at position %d.\n", x, mid + 1);
flag = 1;
break;
}
else if (arr[mid] < x) {
low = mid + 1;
}
else {
high = mid - 1;
}
}
if (flag == 0) {
printf("Element %d not found in the array.\n", x);
}
return 0;
}
